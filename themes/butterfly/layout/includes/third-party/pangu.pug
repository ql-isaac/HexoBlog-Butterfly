script.
  function panguFn () {
    if (typeof pangu === 'object') {
      pangu.spacingElementByTagName('title');
      pangu.spacingElementByTagName('body')
    }
    else {
      getScript('!{url_for(theme.CDN.pangu)}')
        .then(() => {
          pangu.spacingElementByTagName('title');
          pangu.spacingElementByTagName('body')
        })
    }
  }

  function panguInit () {
    if (!{theme.pangu.field === 'post'}){
      GLOBAL_CONFIG_SITE.isPost && panguFn()
    } else {
      panguFn()
    }
  }

  document.addEventListener('DOMContentLoaded', panguInit)
